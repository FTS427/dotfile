# Sway bar config
bar {
        position top
        height 30
        pango_markup enable
        font pango:JetBrainsMono Nerd Font, Material Design Icons 12
        
        separator_symbol "|"

        workspace_buttons yes
        workspace_min_width 25
        
        # tray
        tray_padding 1
        icon_theme Papirus-Dark
        
        status_command $HOME/.config/sway/swaybar.sh
        colors {
                background $nord0
                statusline $nord6
                separator  $nord6

                focused_workspace $nord5 $nord8 $nord6
                active_workspace  $nord5 $nord8 $nord6
                inactive_workspace $nord1 $nord3 $nord0
                urgent_workspace   $nord5 $nord11 $nord6
                binding_mode      $nord5 $nord9 $nord6
        }
}

