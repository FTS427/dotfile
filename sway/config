# Sway config

include /etc/sway/config.d/*
include $HOME/.config/sway/color
#include $HOME/.config/sway/bar

# Auto start
exec_always --no-startup-id mako
exec --no-startup-id fcitx5 --replace -d
exec --no-startup-id aria2c --conf-path=$HOME/.config/aria2/firefox_aria.conf
exec --no-startup-id wl-paste -t text --watch cliphist store
exec --no-startup-id wl-paste -t image --watch cliphist store
exec --no-startup-id waydroid session start
#exec_always autotiling
exec_always $HOME/.scripts/foots.sh
exec_always $HOME/.scripts/sway_env.sh
exec_always xrandr --output $(xrandr | grep -m 1 XWAYLAND | awk '{print $1;}') --primary
exec $HOME/.scripts/sway_idle.sh

# Outputs & Looks
font pango:JetBrainsMono Nerd Font 16
output HDMI-A-1 {
        mode 1920x1080@74.973Hz
        pos 1920 0 
        bg $HOME/Pictures/nord/ign_mountains.png fill $nord0
        subpixel vrgb
        max_render_time off
        scale 1
}
xwayland enable
focus_follows_mouse yes

# Inputs
input type:keyboard {
        xkb_layout "us"
        repeat_delay 260
        repeat_rate 25
}
seat * {
        hide_cursor when-typing enable
        xcursor_theme Adwaita 18
}

# Window rules
for_window [class="QQ"] floating enable
for_window [class="WonderLab"] floating enable

# Key Bindings
set $mod Mod4

bindsym $mod+l          exec $HOME/.scripts/wofi-powermenu.sh
bindsym $mod+Return     exec footclient
bindsym $mod+Shift+k    kill
bindsym $mod+d          exec wofi --show drun
bindsym $mod+i          exec wofi-emoji
bindsym $mod+v          exec cliphist list | wofi --dmenu | cliphist decode | wl-copy
bindsym Print           exec grim -g "$(slurp)" - | wl-copy
#bindsym Print+Shift     exec grim -g $(slurp) "$HOME"/Pictures/Screenshots/screenshort_$(date +"%Y-%m-%d_%H-%M-%S").png

bindsym Control_R       exec fcitx5-remote -t && notify-send -u low -t 500 -a fcitx5 -i "IM switched" "$(fcitx5-remote -n)"

bindsym F7              exec amixer sset Master 5%-
bindsym F8              exec amixer sset Master 5%+

bindsym $mod+Left       focus left
bindsym $mod+Down       focus down
bindsym $mod+Up         focus up
bindsym $mod+Right      focus right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up   move up
bindsym $mod+Shift+Right move right

bindsym $mod+Shift+f    fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space      focus mode_toggle
bindsym $mod+a          focus parent
bindsym $mod+Shift+r    reload
bindsym $mod+Tab        workspace next

floating_modifier $mod normal

bindsym $mod+Shift+e    exec $HOME/.scripts/exit_sway.sh

# Workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9

mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Border & Gaps
default_border pixel 3
default_floating_border pixel 3

#                       <border> <background> <text>  <indicator>   <child_border>
client.focused          $nord8   $nord0       $nord5  $nord7       $nord8
client.focused_inactive $nord3   $nord0       $nord4  $nord7       $nord9
client.unfocused        $nord3   $nord0       $nord4  $nord7       $nord9
# for xwayland windows
client.urgent           $nord11  $nord0       $nord5  $nord11

gaps {
        inner 5
        outer 4
}

bar {
        swaybar_command exec yambar
}
